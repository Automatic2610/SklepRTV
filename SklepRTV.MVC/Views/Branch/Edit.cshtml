@model SklepRTV.Model.Branch

@{
    ViewData["Title"] = "Edit";
}

<h2>Edytuj Oddział</h2>

<form asp-controller="Branch" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="city">Miasto</label>
        <input type="text" class="form-control" id="city" name="city" value="@Model.City" required />
    </div>
    <div class="form-group">
        <label for="street">Ulica</label>
        <input type="text" class="form-control" id="street" name="street" value="@Model.Street" required />
    </div>
    <div class="form-group">
        <label for="houseNo">Numer Domu</label>
        <input type="number" class="form-control" id="houseNo" name="houseNo" value="@Model.HouseNo" required />
    </div>
    <div class="form-group">
        <label for="flatNo">Numer Mieszkania</label>
        <input type="number" class="form-control" id="flatNo" name="flatNo" value="@Model.FlatNo" />
    </div>
    <div class="form-group">
        <label for="province">Prowincja</label>
        <input type="text" class="form-control" id="province" name="province" value="@Model.Province" required />
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button> |
    <a asp-action="Index">Anuluj</a>
</form>
